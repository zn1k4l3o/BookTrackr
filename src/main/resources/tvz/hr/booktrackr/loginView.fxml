<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tvz.hr.booktrackr.LoginController">
   <GridPane prefHeight="573.0" prefWidth="800.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" percentWidth="0.0" prefWidth="400.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="402.0" minWidth="10.0" prefWidth="402.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="57.0" minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="109.0" minHeight="10.0" prefHeight="44.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="121.0" minHeight="10.0" prefHeight="121.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
      
          <Label text="BookTrackr" GridPane.columnSpan="2" GridPane.halignment="CENTER">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
          <Button onAction="#loginAction" text="Ulogiraj se" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
         <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="309.0" promptText="lozinka" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <GridPane.margin>
               <Insets right="64.0" />
            </GridPane.margin></PasswordField>
         <Label text="Korisničko ime" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets right="10.0" />
            </GridPane.margin></Label>
         <Label text="Lozinka" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
            <GridPane.margin>
               <Insets right="10.0" />
            </GridPane.margin></Label>
         <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="29.0" promptText="korisničko_ime" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets right="64.0" />
            </GridPane.margin></TextField>
         <Label text="Login korisnika" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" onAction="#switchToRegister" text="Registriraj se" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
         <Label text="Knjižnica" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
            <GridPane.margin>
               <Insets right="10.0" />
            </GridPane.margin>
         </Label>
         <ComboBox fx:id="libraryComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      </children>
   </GridPane>
</VBox>
